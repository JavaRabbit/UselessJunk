<h2>Useless Junk Products!</h2>

<% @products.collect do |product| %>
    <ul>
      <li>
         <a href = "/products/<%= product.id %>"><%= product.name %></a><br>
         <%= product.description %>
      </li>
    </ul>
<% end %>

<section>Already a registered? <%= link_to "Login", user_login_path %><br/>
        Create an account <%= link_to "Create Account", create_user_path %><br/></section>


ul class = "errors">
  <% @user.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>
