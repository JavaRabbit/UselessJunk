
<div id= 'title'>
  <h2> Useless Crapsey Products!</h2>
</div>


<div id="main_container">
 <p>Some content.</p>


<% @products.collect do |product| %>
  <% unless @product.retired %>

    <div class = 'square-box'>
      <%= product.name %><br>
      <%= product.price %><br>
      <img src="http://placekitten.com/g/40/60" alt="Kitten" >
    </div>

  <% end %>
<% end %>

<aside class="categories">

  <!--links for each category, all pointing to the same method in categories_controller-->
  <!--Sets a new @products, filled with only the categories that match the clicked one-->
  <%= form_tag category_sort_path do %>
    <% all_categories.each do |cat| %>
      <% if defined? @categories %>
        <% checked = @categories.include?(cat) %>
      <% else%>
        <% checked = false %>
      <% end %>
      <% unless cat.products.empty? %>
        <%= check_box_tag "category_ids[]", cat.id, checked %>
        <%= cat.label %>
        <br>
      <% end %>
    <% end %>
     <%= submit_tag("Sort")%>
  <% end %>

</aside>


</div> <!-- last of main container-->
