<h2> Create a Product </h2>

  <ul class = "errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>

 <%= form_for @product, method: :post, url: new_product_path do |f|%>
   <%= f.hidden_field :user_id, value: current_user.id %>

   <p>
     <%= f.label :name.capitalize %>
     <%= f.text_field :name %>
   </p>
   <p>
     <%= f.label :price.capitalize %>
     <%= f.text_field :price %>
   </p>
   <p>
     <%= f.label :quantity.capitalize %>
     <%= f.text_field  :quantity %>
   </p>
   <p>
     <%= f.label :link_to_a_picture %>
     <%= f.text_field :imageurl %>
   </p>
   <p>
     <%= f.label :description.capitalize %>
     <%= f.text_area :description %>
   </p>
   <p><%= f.submit %></p>
 <% end %>
