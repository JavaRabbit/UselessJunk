<h2> Create a Product </h2>

<%= form_for @product do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>

  <p>
    <%= f.label :name.capitalize %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description.capitalize %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :link_to_a_picture %>
    <%= f.text_field :imageurl %>
  </p>
  <p>
    <%= f.label :price.capitalize %>
    <%= f.text_area :price %>
  </p>
  <p>
    <%= f.label :quantity.capitalize %>
    <%= f.text_area :quantity %>
  </p>

  <p><%= f.submit %></p>
<% end %>
