<h1>Log In</h1>

<%= form_tag sessions_path do %> <!-- form_tag not working off a model-->
  <div class="field">             <!-- sessions_path will trigger create action in sessions controller-->
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
  <% end %>
