  <h2>Create an Account</h2>
  
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>

    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :confirm_password %>
      <%= f.password_field :password_confirmation %>
    </p>
    <%= f.submit "Save" %>
  <% end %>
